{
  "extends": "@gorakuicu/tsconfig/remix",
  "include": [
    "remix.environment.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".storybook/*"
  ],
  "compilerOptions": {
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true
  }
}
