{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../src",
    "paths": {
      "~/*": ["./*"]
    },
    "types": [
      "next",
      "next/types/global",
      "next/image-types/global",
      "@types/node",
      "@types/react",
      "cypress",
      "node",
      "../src/types"
    ]
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"]
}
