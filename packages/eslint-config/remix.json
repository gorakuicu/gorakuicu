{
  "$schema": "https://json.schemastore.org/eslintrc.json",
  "extends": [
    "@remix-run/eslint-config",
    "@remix-run/eslint-config/node",
    "plugin:boundaries/recommended",
    "plugin:perfectionist/recommended-natural",
    "plugin:unicorn/recommended",
    "plugin:sonarjs/recommended",
    "plugin:promise/recommended",
    "plugin:security/recommended",
    "plugin:array-func/recommended",
    "plugin:react-perf/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:ssr-friendly/recommended",
    "plugin:json/recommended",
    "plugin:tailwindcss/recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "eslint-plugin-no-explicit-type-exports",
    "ssr-friendly",
    "validate-jsx-nesting",
    "react",
    "boundaries",
    "unused-imports"
  ],
  "env": {
    "es2024": true
  },
  "globals": {
    "React": true,
    "JSX": true
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/"
  ],
  "overrides": [
    {
      "files": [
        "**/(__tests__|__e2e__)/**/*.[jt]s?(x)",
        "**/?(*.)+(spec|test|e2e).[jt]s?(x)"
      ],
      "extends": [
        "plugin:testing-library/react",
        "plugin:jest-formatting/recommended"
      ]
    }
  ],
  "rules": {
    "react/prop-types": "off",
    "tailwindcss/migration-from-tailwind-2": "off",
    "import/no-default-export": "off",
    "array-func/prefer-array-from": "off",
    "react/no-children-prop": "off",
    "unicorn/no-array-reduce": "off",
    "unicorn/string-content": "warn",
    "unicorn/prefer-spread": "off",
    "unicorn/no-null": "off",
    "unicorn/no-array-for-each": "off",
    "no-console": [
      "warn",
      {
        "allow": [
          "warn",
          "error",
          "info",
          "time",
          "timeEnd",
          "timeLog",
          "trace",
          "group",
          "groupEnd",
          "groupCollapsed"
        ]
      }
    ],
    "no-explicit-type-exports/no-explicit-type-exports": "error",
    "validate-jsx-nesting/no-invalid-jsx-nesting": "error",
    "unicorn/no-keyword-prefix": ["error", {"disallowedPrefixes": ["new", "for"]}],
    "react/jsx-no-target-blank": [
      "error",
      {
        "allowReferrer": false,
        "enforceDynamicLinks": "always",
        "warnOnSpreadAttributes": true
      }
    ],
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "boundaries/element-types": [
      2,
      {
        "default": "disallow",
        "rules": [
          {
            "from": "application",
            "allow": [
              "application",
              "routes",
              "widgets",
              "features",
              "entities",
              "shared"
            ]
          },
          {
            "from": "routes",
            "allow": [
              "routes",
              "widgets",
              "features",
              "entities",
              "shared"
            ]
          },
          {
            "from": "widgets",
            "allow": [
              "widgets",
              "features",
              "entities",
              "shared"
            ]
          },
          {
            "from": "features",
            "allow": [
              "features",
              "entities",
              "shared"
            ]
          },
          {
            "from": "entities",
            "allow": [
              "entities",
              "shared"
            ]
          },
          {
            "from": "shared",
            "allow": [
              "shared"
            ]
          }
        ]
      }
    ]
  },
  "settings": {
    "boundaries/elements": [
      {
        "type": "application",
        "pattern": "application/*"
      },
      {
        "type": "routes",
        "pattern": "routes/*"
      },
      {
        "type": "widgets",
        "pattern": "widgets/*"
      },
      {
        "type": "features",
        "pattern": "features/*"
      },
      {
        "type": "entities",
        "pattern": "entities/*"
      },
      {
        "type": "shared",
        "pattern": "shared/*"
      }
    ]
  }
}
